{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 550,
    "height": 450,
    "title": {
      "text":"Butterfly sightings in Australia 2013-2023",
      "fontSize":21,
      "align": "center"
    },
    "projection": {"type": "equirectangular"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Janet-067/FIT3179/w9hw/js/edited.topojson",
          "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightsteelblue", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Janet-067/FIT3179/w9hw/js/edited.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
        },
        "mark": {"type": "geoshape", "fill": "null", "stroke": "grey"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Janet-067/FIT3179/main/data/sighting_data_edit_1.csv"
        },
        "mark": {"type": "circle"},
        "encoding": {
          "longitude": {"field": "decimalLongitude", "type": "quantitative"},
          "latitude": {"field": "decimalLatitude", "type": "quantitative"},
        
          "size": {
            "field": "individualCount",
            "type": "quantitative",
            "title": "Count",
            "scale": {"domain": [1,80,100]}
          },

          "color": { 
            "field": "individualCount",
            "type": "quantitative",
            "title": "Count",
            "scale": {"domain": [1,3,5,10,200], "range": ["#e5d4f6","#efc4ff","#cca9ee","#b37ee6","#8128d6"]}
           
          },

          "tooltip": [
            {"field": "scientificName", "type": "nominal","title": "Name"},
            {"field": "individualCount", "type": "quantitative", "format": ",","title": "Count"},
            {"field": "year", "type": "quantitative","title": "Year of Sighting"},
            {"field": "month", "type": "quantitative","title": "Month of Sighting"},
            {"field": "stateProvince", "type": "nominal","title": "State of Sighting"},
            {"field": "family", "type": "nominal","title": "Family"}
          ]

        }
      }
    ]
  }