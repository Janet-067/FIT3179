{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": {
      "text":"Total butterfly sightings based on month of the year",
      "fontSize":20,
      "align": "center"
    },
    "data": {
    "url": "https://raw.githubusercontent.com/Janet-067/FIT3179/visualisation2/data/monthly.csv"
    },

    "mark": "bar",
  "encoding": {
    "x": {
      "field": "Month",
      "type": "nominal",
      "sort": {"order": "ascending"},
      "axis":{
        "labelAngle":360
      }
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Total number of sightings"
    },
    "color": {
        "field": "Count", 
        "type": "quantitative", 
        "scale": {"scheme": "greens"},
        "title": "Count"
  }
}
}
  