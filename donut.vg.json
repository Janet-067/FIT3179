{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 270,
    "height": 370,
    "title": {
      "text":"Butterfly sightings catagorised by State",
      "fontSize":20,
      "align": "center"
    },

    "data": {
      "values": [
        {"State": "Australian Capital Territory", "Sightings": 381},
        {"State": "New South Wales", "Sightings": 3332},
        {"State": "Northern Territory", "Sightings": 144},
        {"State": "Queensland", "Sightings": 20411},
        {"State": "South Australia", "Sightings": 272},
        {"State": "Tasmania", "Sightings": 498},
        {"State": "Victoria", "Sightings": 1538},
        {"State": "Western Australia", "Sightings": 179}
      ]
    },
    "selection": {
        "continent_highlight": {
        "type": "multi",
        "fields": ["State"],
        "bind": "legend"
        }
    },
    
    "mark": {"type": "arc", "innerRadius": 35,"tooltip": true},
    "encoding": {
      "theta": {
        "field": "Sightings", 
        "type": "quantitative"},

      "color": {"field": "State", "type": "nominal", 
      "scale": {
                "domain": ["Australian Capital Territory", "New South Wales", "Queensland","South Australia","Tasmania","Victoria","Western Australia","Northern Territory"],
                "range": ["#117733", "#88CCEE", "#BF7FEA","#CC6677", "#44AA99", "#AA4499","#DDCC77","#332288"]
              }
  },

      "opacity": {
        "condition": {"selection": "continent_highlight", "value": 1},
        "value": 0.3}
    }

  }